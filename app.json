{
  "name": "PyroGramBot",
  "description": "PyroGram Telegram User / Bot. Powered by @UserBotTalk",
  "keywords": [
    "telegram",
    "best",
    "indian",
    "pyrogram",
    "userbot",
    "3",
    "plugin",
    "modular",
    "productivity"
  ],
  "repository": "https://github.com/Akashop56/PyroGramBot",
  "success_url": "https://telegram.dog/UserBotTalk",
  "website": "https://github.com/SpEcHiDe/PyroGramBot",
  "env": {
    "ENV": {
      "description": "Setting this to ANYTHING will enable webhooks when in env mode",
      "value": "ANYTHING"
    },
    "APP_ID": {
      "description": "Get this value from https://my.telegram.org"
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org"
    },
    "TG_BOT_TOKEN_BF_HER": {
      "description": "Get this value from @BotFather"
    },
    "COMMAND_HAND_LER": {
      "description": "specify command handler that should be used for the plugins",
      "required": false
    }
  },
  "addons": [{
    "plan": "heroku-postgresql",
    "options": {
      "version": "12"
    }
  }],
  "buildpacks": [{
    "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
  }, {
    "url": "heroku/python"
  }],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
